<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    tools:context=".SmartParkingActivity">

    <Button
        android:id="@+id/buttonSensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="268dp"
        android:layout_marginRight="2dp"
        android:text="Presione para \nIngreso al \nestacionamiento"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Smart Parking"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:inputType="text"
        android:textSize="30dp"
        android:hint="Mensaje para el Arduino"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        tools:ignore="MissingConstraints"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#38ffffff" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="39dp"
        android:padding="30dp"
        android:text="Enviar"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSend"
        android:text="Resultado"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        android:textColor="@color/white"
        tools:textSize="15pt" />

</RelativeLayout>